package org.dll.core
{
	//-----------------------------------------------------------------------------
	// import_declaration
	//-----------------------------------------------------------------------------
	import flash.display.Sprite;
	
	import org.dll.interfaces.IDll;
	
	
	public class Dll extends Sprite implements IDll
	{
		//-----------------------------------------------------------------------------
		// Var
		//-----------------------------------------------------------------------------
		
		//-----------------------------------------------------------------------------
		// Constructor
		//-----------------------------------------------------------------------------
		public function Dll()
		{
			super();
		}
		
		public function init(_arg1:Object):void
		{
		}
		
		public function callMethod(funName:String, ..._args):*
		{
			if (hasOwnProperty(funName) && (this[funName] is Function)){
				return this[funName].apply(this, _args);
			}
			return null;
		}
		
		//-----------------------------------------------------------------------------
		// Methods
		//-----------------------------------------------------------------------------
	}
}