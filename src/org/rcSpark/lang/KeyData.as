package org.rcSpark.lang
{
	//-----------------------------------------------------------------------------
	// import_declaration
	//-----------------------------------------------------------------------------
	
	public class KeyData
	{
		//-----------------------------------------------------------------------------
		// Var
		//-----------------------------------------------------------------------------
		/**
		 * 目标的属性或方法名
		 */
		public var prop:*;
		
		public var isFun:Boolean=false;
		
		/**
		 * 绑定语言的值
		 */
		public var key:String;
		
		/**
		 * 参数,语言里这些符号{0}将转为args的每个元素
		 */
		public var args:Array;
		
		//-----------------------------------------------------------------------------
		// Constructor
		//-----------------------------------------------------------------------------
		public function KeyData(prop:*, key:String, isFun:Boolean=false, args:Array=null)
		{
			this.prop=prop;
			this.key=key;
			this.isFun=isFun;
			this.args=args;
		}
		
		//-----------------------------------------------------------------------------
		// Methods
		//-----------------------------------------------------------------------------
	}
}